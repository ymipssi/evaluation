{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

	<h1>{{produit.nom}}</h1>
	<p>Photo du produit : {{produit.photo}}</p>
    <p>Quantité du produit en stock : {{produit.quantiteEnStock}}</p>
    <p>Prix du produit : {{produit.prix}}</p>

	<button type="button" class="btn btn-danger">
        <a href="{{path('supprimer_produit', {'id':produit.id})}}" class="text-light text-decoration-none">Supprimer ce produit de la base de données</a>
    </button>
    
</div>
  
{% endblock %}